@model OperationsHub.Api.Models.Entities.IntegrationJob

@{
    ViewData["Title"] = "Job Details #" + Model.Id;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Job #@Model.Id Details</h2>
    <a asp-action="Jobs" class="btn btn-outline-secondary">Back to List</a>
</div>

<div class="card mb-4">
    <div class="card-header">
        Overview
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.JobType</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>

            <dt class="col-sm-3">Started</dt>
            <dd class="col-sm-9">@Model.StartedAt.ToString("G")</dd>

            <dt class="col-sm-3">Finished</dt>
            <dd class="col-sm-9">@Model.FinishedAt?.ToString("G")</dd>

            <dt class="col-sm-3">Details</dt>
            <dd class="col-sm-9">@Model.Details</dd>
        </dl>
    </div>
</div>

<h3>Logs</h3>
<table class="table table-sm table-striped">
    <thead>
        <tr>
            <th>Time</th>
            <th>Level</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            string logClass = log.Level == "Error" ? "text-danger fw-bold" : (log.Level == "Warning" ? "text-warning" : "");
            <tr>
                <td>@log.CreatedAt.ToString("HH:mm:ss.fff")</td>
                <td class="@logClass">@log.Level</td>
                <td>@log.Message</td>
            </tr>
        }
    </tbody>
</table>

