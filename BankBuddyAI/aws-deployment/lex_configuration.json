{
    "name": "BankBuddyLexBot",
    "description": "Chatbot for BankBuddy AI",
    "intents": [
      {
        "intentName": "CheckBalance",
        "intentVersion": "$LATEST"
      },
      {
        "intentName": "FreezeCard",
        "intentVersion": "$LATEST"
      }
    ],
    "clarificationPrompt": {
      "maxAttempts": 2,
      "messages": [
        {
          "content": "I didn't understand that. Could you please rephrase?",
          "contentType": "PlainText"
        }
      ]
    },
    "abortStatement": {
      "messages": [
        {
          "content": "Sorry, I couldn't understand. Please try again later.",
          "contentType": "PlainText"
        }
      ]
    },
    "locale": "en-US",
    "idleSessionTTLInSeconds": 300
  }
  