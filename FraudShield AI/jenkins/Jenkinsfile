pipeline {
    agent any

    stages {
        stage('Build') {
            parallel {
                stage('C Module') {
                    steps {
                        dir('c-module') {
                            sh 'make'
                        }
                    }
                }
                stage('ML Engine') {
                    steps {
                        dir('ml-engine') {
                            sh 'python3 fraud_model.py'
                        }
                    }
                }
                stage('Risk Scoring Service') {
                    steps {
                        dir('risk-scoring-service') {
                            sh 'mvn clean package'
                        }
                    }
                }
                stage('Data Streaming API') {
                    steps {
                        dir('data-streaming-api') {
                            sh 'npm install'
                        }
                    }
                }
                stage('.NET Dashboard') {
                    steps {
                        dir('dashboard') {
                            sh 'dotnet build'
                        }
                    }
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                // Insert commands for unit tests and security scans here.
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to AWS Lambda and Kinesis...'
                // Deployment commands â€“ for example, run the AWS deployment script.
                dir('deployment') {
                    sh 'bash aws_deploy.sh'
                }
            }
        }
    }
}
