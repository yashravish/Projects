<section id="self-assessment" class="self-assessment">
  <div class="container">
    <h2>Mental Health Self-Assessment</h2>
    <form id="assessment-form">
      <div class="form-group">
        <label for="question1">In the past two weeks, how often have you felt down, depressed, or hopeless?</label>
        <select id="question1" name="question1">
          <option value="0">Not at all</option>
          <option value="1">Several days</option>
          <option value="2">More than half the days</option>
          <option value="3">Nearly every day</option>
        </select>
      </div>
      <!-- Additional questions can be added similarly -->
      <button type="submit">Submit Assessment</button>
    </form>
    <div id="assessment-result" aria-live="polite"></div>
  </div>
</section>
